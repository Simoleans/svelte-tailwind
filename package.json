{
  "name": "svelte-tailwind",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c && cross-env NODE_ENV=production tailwindcss build index.css -o public/css/main.css",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "build-tailwind:dev": "npx tailwindcss build index.css -o public/css/main.css",
    "build-css:production": "cross-env NODE_ENV=production tailwindcss build index.css -o public/css/main.css"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "cross-env": "^7.0.3",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "autoprefixer": "^10.1.0",
    "postcss": "^8.2.1",
    "sirv-cli": "^1.0.0",
    "tailwindcss": "^2.0.2"
  }
}
